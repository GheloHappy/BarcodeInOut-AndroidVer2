<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarcodeInOut.BarcodeInFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IN"
        android:textSize="150dp"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:background="#000"/>


    <EditText
        android:id="@+id/etBarcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="261dp"
        android:gravity="center"
        android:inputType="text"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spUom"
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="205dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="43dp"
        android:layout_toEndOf="@+id/etBarcode"
        android:entries="@array/spUomItems"/>

    <TextView
        android:layout_width="73dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="73dp"
        android:text="UOM :"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etBarcodeQty"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="204dp"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="39dp"
        android:layout_toEndOf="@+id/etBarcode"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:text="1"
        android:textSize="20dp" />

    <TextView
        android:layout_width="73dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="73dp"
        android:text="QTY :"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvSapCode"
        android:layout_width="wrap_content"
        android:layout_height="214dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="288dp"
        android:text="Barcode"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="90dp" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="558dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="379dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="201dp"
        android:text="Description"
        android:textAlignment="center"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="312dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="31dp"
        android:background="#24F24E"
        android:text="Save"
        android:textSize="30dp" />

</RelativeLayout>