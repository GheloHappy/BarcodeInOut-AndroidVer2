<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewBOInventory.ViewBOInventoryFragment"
    android:background="@drawable/gradient_color">

    <TextView
        android:layout_width="228dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="194dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="178dp"
        android:text="-VIEW BO INVENTORY-"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="12dp"
        android:text="Reference #: "
        android:textColor="#fff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etViewInvtSearchRefNbr"
        android:layout_width="742dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="142dp"
        android:background="@drawable/login_input_bg"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewInvtSearch"
        android:layout_width="117dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_button_bg"
        android:text="Search"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lvViewInvtBarcodeTrans"
        android:layout_width="570dp"
        android:layout_height="647dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="180dp"
        android:background="#fff"
        android:outlineAmbientShadowColor="@color/black" />

    <TextView
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginBottom="123dp"
        android:text="TOTAL CS : "
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvViewInvtTotCS"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="241dp"
        android:layout_marginLeft="241dp"
        android:layout_marginBottom="119dp"
        android:hint="0"
        android:textColor="#f50a16"
        android:textSize="30sp" />

    <TextView
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="510dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="122dp"
        android:text="TOTAL PCS : "
        android:textAlignment="textEnd"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvViewInvtTotPcs"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="749dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="119dp"
        android:hint="0"
        android:textColor="#f50a16"
        android:textSize="30sp" />
</RelativeLayout>