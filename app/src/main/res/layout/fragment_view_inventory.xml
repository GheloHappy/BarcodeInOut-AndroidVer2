<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewInventory.ViewInventoryFragment"
    android:background="@drawable/gradient_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="465dp"
        android:layout_marginBottom="12dp"
        android:text="Reference #: "
        android:textColor="#fff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etViewInvtSearchRefNbr"
        android:layout_width="427dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="157dp"
        android:background="@drawable/login_input_bg"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnViewInvtSearch"
        android:layout_width="117dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="463dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_button_bg"
        android:text="Search"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lvInvtBarcodeTrans"
        android:layout_width="570dp"
        android:layout_height="647dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="180dp"
        android:background="#fff"
        android:outlineAmbientShadowColor="@color/black" />
    <TextView
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="412dp"
        android:layout_marginBottom="131dp"
        android:text="TOTAL CS : "
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvHomeTotCS"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="179dp"
        android:layout_marginEnd="318dp"
        android:layout_marginBottom="130dp"
        android:hint="0"
        android:textColor="#f50a16"
        android:textSize="30sp" />

    <TextView
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="294dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="128dp"
        android:text="TOTAL PCS : "
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvHomeTotPcs"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="479dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="127dp"
        android:hint="0"
        android:textColor="#f50a16"
        android:textSize="30sp" />
</RelativeLayout>