<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="65dp"
        app:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:hint="-"
            android:textColor="#f70521"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:hint="DESCRIPTION"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/description"
            android:hint="item description not found"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:hint="barcode"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/maxQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/barcode"
            android:hint="Max Qty"
            android:inputType="number"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/uom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/maxQty"
            android:hint="-"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/uom"
            android:hint="0"
            android:inputType="number"
            android:textColor="#5793f2"
            android:textSize="22sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>