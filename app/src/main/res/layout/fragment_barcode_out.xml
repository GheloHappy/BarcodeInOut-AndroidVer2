<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarcodeInOut.BarcodeOutFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OUT"
        android:textSize="120dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/gradient_color"/>


    <EditText
        android:id="@+id/etBarcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="205dp"
        android:gravity="center"
        android:inputType="text"
        android:textSize="20dp"
        android:singleLine="true"/>

    <Spinner
        android:id="@+id/spUom"
        android:layout_width="100dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="39dp"
        android:layout_toEndOf="@+id/etBarcode"
        android:entries="@array/spUomItems" />

    <TextView
        android:layout_width="73dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="73dp"
        android:text="QTY :"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etBarcodeQty"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="208dp"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="35dp"
        android:layout_toEndOf="@+id/etBarcode"
        android:gravity="center"
        android:inputType="number"
        android:text="1"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="73dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="73dp"
        android:text="UOM :"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvBarcode"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="10dp"
        android:text="Barcode"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="558dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBarcode"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:text="Description"
        android:textAlignment="center"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="312dp"
        android:layout_height="73dp"
        android:layout_below="@+id/tvDesc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="145dp"
        android:background="#24F24E"
        android:text="Save"
        android:textSize="30dp" />

</RelativeLayout>