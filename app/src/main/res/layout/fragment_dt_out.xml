<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DTOut.DtOutFragment"
    android:background="@drawable/gradient_color">

    <TextView
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="405dp"
        android:text="DT DATE :"
        android:textColor="#fff"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spinDtDate"
        android:layout_width="226dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="352dp" />

    <TextView
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="294dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="133dp"
        android:text="DT # :"
        android:textColor="#fff"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/spinDT"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="291dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="52dp" />

    <ListView
        android:id="@+id/lvDTOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="182dp"
        android:background="#fff"
        android:outlineAmbientShadowColor="@color/black" />

    <EditText
        android:id="@+id/etDtOutBarcode"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="389dp"
        android:layout_marginBottom="113dp"
        android:inputType="text"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/etDtOutQty"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="367dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="116dp"
        android:inputType="text"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="277dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="115dp"
        android:text="Qty :"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp" />

</RelativeLayout>