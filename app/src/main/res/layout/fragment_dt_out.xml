<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DTOut.DtOutFragment"
    android:background="@drawable/gradient_color">

    <TextView
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="495dp"
        android:text="DATE :"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinDtDate"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="322dp" />

    <TextView
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="294dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="232dp"
        android:text="DT # :"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinDT"
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="364dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp" />

    <ListView
        android:id="@+id/lvDTOut"
        android:layout_width="582dp"
        android:layout_height="687dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="182dp"
        android:background="#fff"
        android:outlineAmbientShadowColor="@color/black" />

    <EditText
        android:id="@+id/etDtOutBarcode"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="389dp"
        android:layout_marginBottom="113dp"
        android:inputType="text"
        android:textColor="#fff"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etDtOutQty"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="367dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="116dp"
        android:inputType="number"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="277dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="115dp"
        android:text="Qty :"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="395dp"
        android:layout_marginBottom="49dp"
        android:text="TOTAL CS :"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvTotCase"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="183dp"
        android:layout_marginEnd="336dp"
        android:layout_marginBottom="49dp"
        android:hint="0"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="30sp" />

    <TextView
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="278dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="48dp"
        android:text="CS COUNT:"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvTotCaseShot"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="462dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="47dp"
        android:hint="0"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="30sp" />

</RelativeLayout>