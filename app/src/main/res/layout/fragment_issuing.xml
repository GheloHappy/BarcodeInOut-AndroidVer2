<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Issuing.IssuingFragment"
    android:background="@drawable/gradient_color">

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="244dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="236dp"
        android:text="-ISSUING-"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/etSearchOSDate"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:hint="Search Date"
        android:inputType="date"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="230dp"
        android:text="Refnbr # :"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinRefNbr"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="47dp" />

    <ListView
        android:id="@+id/lvOSOut"
        android:layout_width="wrap_content"
        android:layout_height="615dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="254dp"
        android:background="#fff"
        android:outlineAmbientShadowColor="@color/black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="73dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="198dp"
        android:text="UOM :"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/spInvtUom"
        android:layout_width="185dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="192dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="195dp"
        android:background="#fff"
        android:entries="@array/spUomItems" />

    <EditText
        android:id="@+id/etOsOutBarcode"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="167dp"
        android:hint="tap here"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="153dp"
        android:text="Qty :"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etOsOutQty"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="154dp"
        android:inputType="number"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="396dp"
