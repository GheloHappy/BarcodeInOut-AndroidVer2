        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvTotCaseShot"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="488dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="87dp"
        android:hint="0"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="30sp" />

    <TextView
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="402dp"
        android:layout_marginBottom="29dp"
        android:text="TOTAL PCS :"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvTotPcs"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="174dp"
        android:layout_marginEnd="303dp"
        android:layout_marginBottom="31dp"
        android:hint="0"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#00FF22"
        android:textSize="30sp" />

    <TextView
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="298dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="28dp"
        android:text="PCS COUNT:"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvTotPcsShot"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="488dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:hint="0"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="30sp" />

</RelativeLayout>